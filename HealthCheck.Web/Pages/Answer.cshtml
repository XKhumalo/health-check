@page
@using HealthCheck.Model.Enums
@model HealthCheck.Web.Pages.AnswerModel
@{
    ViewData["Title"] = "Answer";
}

@{
    var red = (int)AnswerOptions.Red;
    var green = (int)AnswerOptions.Green;
    var amber = (int)AnswerOptions.Amber;
}

@Html.HiddenFor(model => model.SessionViewModel.SessionKey)

<div class="container">
    <div class="row">
        <h1 class="h1">@Model.CategoryViewModel.Name</h1>
    </div>
    <div class="row">
        <h3 class="h3">@Model.CategoryViewModel.Description</h3>
    </div>
    <hr />
    <div class="row card-deck mb-3 text-center">
        <div class="card mb-4 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Red</h4>
            </div>
            <div class="card-body">
                <p class="mt-3 mb-4">@Model.CategoryViewModel.Negative</p>
                <a data-admin="@Model.AdminId"
                   data-name="@Model.UserViewModel.Name"
                   data-user="@Model.UserViewModel.UserId"
                   data-category="@Model.CategoryViewModel.CategoryId"
                   data-session="@Model.SessionViewModel.SessionId"
                   data-answer="@red" class="btn btn-lg btn-block btn-danger answer">Red</a>
            </div>
        </div>
        <div class="card mb-4 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Amber</h4>
            </div>
            <div class="card-body">
                <p> Neutral </p>
                <a data-admin="@Model.AdminId"
                   data-name="@Model.UserViewModel.Name"
                   data-user="@Model.UserViewModel.UserId"
                   data-category="@Model.CategoryViewModel.CategoryId"
                   data-session="@Model.SessionViewModel.SessionId"
                   data-answer="@amber" class="btn btn-lg btn-block btn-warning answer">Amber</a>
            </div>
        </div>
        <div class="card mb-4 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Green</h4>
            </div>
            <div class="card-body">
                <p class="mt-3 mb-4">@Model.CategoryViewModel.Positive</p>
                <a data-admin="@Model.AdminId"
                   data-name="@Model.UserViewModel.Name"
                   data-user="@Model.UserViewModel.UserId"
                   data-category="@Model.CategoryViewModel.CategoryId"
                   data-session="@Model.SessionViewModel.SessionId"
                   data-answer="@green" class="btn btn-lg btn-block btn-success answer">Green</a>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-5">
        <div id="answerSubmitted" class="alert alert-success" role="alert">
            Your answer has been submitted
        </div>
    </div>
    
