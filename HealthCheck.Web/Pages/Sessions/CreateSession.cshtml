@page
@model HealthCheck.Web.Pages.Sessions.CreateSessionModel
@{
    ViewData["Title"] = "CreateSession";
}

<div class="container">
    <div class="row">
        <h1 class="h3 mb-3 font-weight-normal">Session Details</h1>
    </div>
    <div class="row">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Description</th>
                    <th class="text-success">Green</th>
                    <th class="text-danger">Red</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.CategoriesViewModel)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td class="text-success">@category.Positive</td>
                        <td class="text-danger">@category.Negative</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row justify-content-center mt-5">
        <div class="col-3">
            <form id="join-session-form" method="post">
                <button asp-page-handler="create" class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
            </form>
        </div>
    </div>
</div>