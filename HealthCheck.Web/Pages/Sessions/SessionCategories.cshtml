@page "{id}"
@model HealthCheck.Web.Pages.Sessions.SessionCategoriesModel
@{
    ViewData["Title"] = "SessionCategories";
}

<h1>Session Categories</h1>

<div class="container">
    <h3>Session Key: @Model.Session.SessionKey</h3>

    <div class="row">
        @if (Model.Categories.Any(q => !q.IsDeleted))
        {
            <div class="table-responsive w-75">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model.Categories.Where(q => !q.IsDeleted))
                        {
                            <tr>
                                <td>@category._id.ToString()</td>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>
                                    <a class="btn btn-sm btn-success" asp-page="./EditCategory" asp-route-id="@category._id.ToString()"><i class="fas fa-edit"></i>&nbsp; Edit</a>
                                    <button class="btn btn-sm btn-outline-danger" data-id="@category._id.ToString()" data-toggle="modal" data-target="#deleteQuestionModal"><i class="fas fa-trash-alt"></i>&nbsp; Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>No data</p>
        }
        <button asp-page="/Sessions/AddCategorySession" class="btn btn-lg btn-secondary btn-block">Add a category</button>
    </div>
</div>

