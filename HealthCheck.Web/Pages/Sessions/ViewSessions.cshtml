@page
@model HealthCheck.Web.Pages.Sessions.ViewSessionsModel
@{
    ViewData["Title"] = "ViewSessions";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">My Sessions</h5>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Session Key</th>
                                <th scope="col">Date Created</th>
                                <th scope="col">Start Time</th>
                                <th scope="col">End Time</th>
                                <th scope="col">Is Complete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var session in Model.SessionsViewModel)
                            {
                                <tr>
                                    <td>@session.SessionKey</td>
                                    <td>@session.DateCreated.ToString()</td>
                                    <td class="text-success">@session.StartTime.ToString()</td>
                                    <td class="text-danger">@session.EndTime.ToString()</td>
                                    <td>@(session.IsComplete ? "Yes" : "No")</td>
                                    <td><a asp-page="/Sessions/ViewSession" asp-route-sessionid="@session.SessionId">View</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-5">
        <div class="col-3">
            <form method="post">
                <button asp-page-handler="create" class="btn btn-lg btn-primary btn-block" type="submit">Create New Session</button>
            </form>
        </div>
    </div>
</div>